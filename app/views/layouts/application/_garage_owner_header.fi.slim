header.bg-light.header.header-md.navbar.box-shadow
  .navbar-header.aside-md.dk
    a.btn.btn-link.visible-xs data-target="#nav,html" data-toggle="class:nav-off-screen,open"
      i.fa.fa-bars
    .visible-xs
      = link_to home_page_path, class: 'navbar-brand' do
        = image_tag('iisifix-logo-primary.png', alt: 'iisifix logo')
  .locale
    = render 'layouts/application/locale_menu'
  .navbar-left
    .garage_logo
      = image_tag @garage.logo.small_thumb.url, class: 'img-rounded'
    .garage_info
      h4
        = @garage.name
      small
        em
          i.fa.fa-map-marker.fa-lg &nbsp;
          = @garage.full_street_address
