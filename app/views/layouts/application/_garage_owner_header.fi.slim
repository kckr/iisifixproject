  .navbar-right.garage_header_buttons.margin10right
    #social-buttons
      - if @garage.twitter_link.present?
        a.btn.btn-sm.btn-icon.btn-default target="_blank" href="#{@garage.twitter_link}"
          i.fa.fa-twitter
      - if @garage.facebook_link.present?
        a.btn.btn-sm.btn-icon.btn-default target="_blank" href="#{@garage.facebook_link}"
          i.fa.fa-facebook
      - if @garage.google_plus_link.present?
        a.btn.btn-sm.btn-icon.btn-default target="_blank" href="#{@garage.google_plus_link}"
          i.fa.fa-google-plus
